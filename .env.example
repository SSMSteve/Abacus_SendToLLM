# LLM Configuration Environment Variables
# Copy this file to .env and fill in your actual credentials

# Default model to use (options: abacus-gpt5, openai-gpt4, openai-gpt5, anthropic-claude)
DEFAULT_MODEL=abacus-gpt5

# Abacus.AI Configuration
ABACUS_API_KEY=your_abacus_api_key_here
ABACUS_DEPLOYMENT_ID=your_deployment_id_here
ABACUS_DEPLOYMENT_TOKEN=your_deployment_token_here
ABACUS_TEMPERATURE=0.7
ABACUS_MAX_TOKENS=4000

# OpenAI Configuration (for future use)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration (for future use)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4000

# Chat Configuration
CHAT_INCLUDE_HISTORY=true
CHAT_SAVE_RESPONSES=true
CHAT_OUTPUT_DIR=./output
